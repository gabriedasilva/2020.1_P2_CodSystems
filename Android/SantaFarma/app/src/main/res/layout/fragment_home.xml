<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                app:layout_constraintBottom_toTopOf="@+id/constraintLayout3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="179dp"
                    android:src="@drawable/logov2" />
            </FrameLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout3"
                android:layout_width="396dp"
                android:layout_height="477dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout">

                <HorizontalScrollView
                    android:id="@+id/scrollOfert"
                    android:layout_width="0dp"
                    android:layout_height="78dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ofeta_prod1"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:padding="5dp"
                            android:src="@drawable/prod_1"
                            app:civ_border_color="@color/colorAccent"
                            app:civ_border_width="1.5dp" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/oferta_prod2"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:padding="5dp"
                            android:src="@drawable/prod_2"
                            app:civ_border_color="@color/colorAccent"
                            app:civ_border_width="1.5dp" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/oferta_prod3"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:padding="5dp"
                            android:src="@drawable/prod_3"
                            app:civ_border_color="@color/colorAccent"
                            app:civ_border_width="1.5dp" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/oferta_prod4"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:padding="5dp"
                            android:src="@drawable/prod_4"
                            app:civ_border_color="@color/colorAccent"
                            app:civ_border_width="1.5dp" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/oferta_prod5"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:padding="5dp"
                            android:src="@drawable/prod_5"
                            app:civ_border_color="@color/colorAccent"

                            app:civ_border_width="1.5dp" />
                    </LinearLayout>


                </HorizontalScrollView>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Ofertas"
                    android:textColor="@color/colorAccent"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toTopOf="@+id/scrollOfert"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/scrollOfertImg" />

                <HorizontalScrollView
                    android:id="@+id/scrollOfertImg"
                    android:layout_width="320dp"
                    android:layout_height="320dp"
                    app:layout_constraintBottom_toTopOf="@+id/textView4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ofer_img1"
                            android:layout_width="320dp"
                            android:layout_height="320dp"
                            android:src="@drawable/prod_1" />

                        <ImageView
                            android:id="@+id/ofer_img2"
                            android:layout_width="320dp"
                            android:layout_height="320dp"
                            android:scaleType="center"
                            android:src="@drawable/prod_2" />

                        <ImageView
                            android:id="@+id/ofer_Img3"
                            android:layout_width="320dp"
                            android:layout_height="320dp"
                            android:src="@drawable/prod_3" />

                        <ImageView
                            android:id="@+id/ofer_img4"
                            android:layout_width="320dp"
                            android:layout_height="320dp"
                            android:src="@drawable/prod_4" />

                        <ImageView
                            android:id="@+id/ofer_img5"
                            android:layout_width="320dp"
                            android:layout_height="320dp"
                            android:src="@drawable/prod_5" />
                    </LinearLayout>
                </HorizontalScrollView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>