<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:fontFamily="sans-serif-black"
        android:text="Ofertas"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/scrollOfert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollOfertImg" />

    <HorizontalScrollView
        android:id="@+id/scrollOfertImg"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ofer_img1"
                android:layout_width="320dp"
                android:layout_height="320dp"
                android:src="@drawable/prod_1" />

            <ImageView
                android:id="@+id/ofer_img2"
                android:layout_width="320dp"
                android:layout_height="320dp"
                android:scaleType="center"
                android:src="@drawable/prod_2" />

            <ImageView
                android:id="@+id/ofer_Img3"
                android:layout_width="320dp"
                android:layout_height="320dp"
                android:src="@drawable/prod_3" />

            <ImageView
                android:id="@+id/ofer_img4"
                android:layout_width="320dp"
                android:layout_height="320dp"
                android:src="@drawable/prod_4" />

            <ImageView
                android:id="@+id/ofer_img5"
                android:layout_width="320dp"
                android:layout_height="320dp"
                android:src="@drawable/prod_5" />
        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/scrollOfert"
        android:layout_width="0dp"
        android:layout_height="78dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ofeta_prod1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="5dp"
                android:src="@drawable/prod_1"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_width="1.5dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/oferta_prod2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="5dp"
                android:src="@drawable/prod_2"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_width="1.5dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/oferta_prod3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="5dp"
                android:src="@drawable/prod_3"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_width="1.5dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/oferta_prod4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="5dp"
                android:src="@drawable/prod_4"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_width="1.5dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/oferta_prod5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="5dp"
                android:src="@drawable/prod_5"
                app:civ_border_color="@color/colorAccent"

                app:civ_border_width="1.5dp" />
        </LinearLayout>


    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:fontFamily="sans-serif-black"
        android:text="Categorias"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/scrollCategorias"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollOfert" />

    <HorizontalScrollView
        android:id="@+id/scrollCategorias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/medicam_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:scaleType="centerCrop"
                android:src="@drawable/medicines" />

            <ImageButton
                android:id="@+id/mamaeBebe_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:scaleType="centerCrop"
                android:src="@drawable/mother" />

            <ImageButton
                android:id="@+id/pSocorros_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:scaleType="centerCrop"
                android:src="@drawable/first_aid" />

            <ImageButton
                android:id="@+id/vitSupleNatu_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:scaleType="centerCrop"
                android:src="@drawable/fitness" />

            <ImageButton
                android:id="@+id/beleza_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:scaleType="centerCrop"
                android:src="@drawable/cosmetics" />

            <ImageButton
                android:id="@+id/higiene_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:scaleType="centerCrop"
                android:src="@drawable/hygienic_items" />

        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>